nvidia-settings -a [gpu:0]/GPUFanControlState=1
nvidia-settings -a [gpu:1]/GPUFanControlState=1
nvidia-settings -a [gpu:2]/GPUFanControlState=1
nvidia-settings -a [gpu:3]/GPUFanControlState=1


nvidia-settings -a [fan:0]/GPUTargetFanSpeed=20
nvidia-settings -a [fan:1]/GPUTargetFanSpeed=20
nvidia-settings -a [fan:2]/GPUTargetFanSpeed=20
nvidia-settings -a [fan:3]/GPUTargetFanSpeed=20
